<header>
<h2>Books</h2>
</header>

<main>
<!--投稿一覧-->
  <div class="index">
    <table class="book-table">
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
      <% @books.each do |book| %>
      <tr>
        <td class="table-title"><%= book.title %></td>
        <td class="table-body"><%= book.body %></td>
        <td class="table-link"><%= link_to "Show", "/books/#{book.id}" %></td>
        <td class="table-link"><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td class="table-link"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
      <% end %>
    </table>
  </div>


  <!--新規投稿フォーム-->
  <div class="new-book-form">
    <h2>New book</h2>
    
    <% if @book.errors.any? %>
        <%= @book.errors.count %> errors prohibited this book from being saved:
        <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>
    
    <%= form_with model: @book do |f| %>
    
        <p class="form-title">Title</p>
        <%= f.text_field :title %>
    
        <p class="form-title">Body</p>
        <%= f.text_area :body %>
        
        <div>
            <%= f.submit 'Create Book' %>
        </div>
    <% end %>
  </div>
</main>
